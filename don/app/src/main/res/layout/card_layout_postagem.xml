<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    android:padding="0sp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical"
        android:padding="0sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10sp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo_genbr" />

            <LinearLayout
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:id="@+id/textAutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0sp"
                    android:fontFamily="@font/comfortaa"
                    android:paddingLeft="10sp"
                    android:textColor="@color/prymary_blue"
                    android:textSize="18sp"
                    tools:text="Autor" />

                <TextView
                    android:id="@+id/textCategoria"
                    android:layout_width="190dp"
                    android:layout_height="25dp"
                    android:fontFamily="@font/comfortaa"
                    android:paddingLeft="10sp"
                    android:textColor="@color/secundary_blue"
                    android:textSize="12sp"
                    tools:text="Categoria" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButtonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0sp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:tint="@color/prymary_blue"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

            <ImageButton
                android:id="@+id/imageButtonEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:contentDescription="@string/buttonEditar"
                android:scaleType="center"
                android:tint="@color/prymary_blue"
                app:srcCompat="@drawable/ic_baseline_dehaze_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/prymary_blue"
            android:textSize="18sp"
            tools:text="Título da Publicação" />

        <TextView
            android:id="@+id/textDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/secundary_blue"
            android:textSize="14sp"
            tools:text="Descrição" />

        <ImageView
            android:id="@+id/imageViewPost"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo_genbr" />

        <TextView
            android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/secundary_blue"
            android:textSize="12sp"
            tools:text="Data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:padding="3sp">

            <ImageButton
                android:id="@+id/imageButtonReacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/emoticon" />

            <ImageButton
                android:id="@+id/imageButtonComente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/comente" />

            <ImageButton
                android:id="@+id/imageButtonRepost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/repost" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/cardview_shadow_end_color"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/vitamina" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>